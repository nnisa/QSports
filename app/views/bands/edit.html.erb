<% provide(:title, "Update Band") %> 
<h1>Editing Band</h1>

<%= form_for(@band, :html => { :multipart => true }) do |f| %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@band) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :playing_next, "Where Playing Next" %>
      <%= f.text_field :playing_next %>

      <%= f.label :when_playing_next, "When Playing Next" %>
      <%= f.text_field :when_playing_next %>

      <div class="field">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>

      <div class="field">
        <%= f.label :song %>
        <%= f.file_field :song %>
      </div>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>